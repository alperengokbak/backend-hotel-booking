datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  city      String
  country   String
  bookings  Booking[]
  comments  Comment[]
}

model Hotel {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  address      String?
  city         String
  country      String
  price        Int
  specialPrice Boolean   @default(false)
  capacity     Int
  rating       Int?
  image        String
  memberPrice  Boolean   @default(false)
  comments     Comment[]
  bookings     Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
  hotel      Hotel    @relation(fields: [hotelId], references: [id])
  hotelId    Int
  entryDate  DateTime
  exitDate   DateTime
  guests     Int

  @@unique([customerId, hotelId])
}

model Comment {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
  hotel      Hotel    @relation(fields: [hotelId], references: [id])
  hotelId    Int
  text       String
}
